/* ==========================================================================
   Cabeçalho da página
   ========================================================================== */


.cabecalho {
    position: relative;
    z-index: 1100 ;
    display: block;
    width: auto;
    height: 50px;
    background: #22394d;
    border-bottom: 1px #fff solid;
}
.cabecalho h1 {
    width: auto ! important;
    margin-top: 0 ! important;
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 1.7em ! important;
    font-weight: normal;
    line-height: 43px;
    color: #fff;
    text-align: center;
}
.cabecalho .sigla {
    display: none;
}
.logo img {
    float: left;
    width: auto ! important;
    padding: 6px 0 6px 0;
    margin-left: 5px;
}
.cabecalho .container-fluid {
    position: relative;
    z-index: 2;
}
.cabecalho:after {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: block;
    content: '';
    opacity: .4;
}
@media only screen and (-webkit-min-device-pixel-ratio: 2), only screen and (min--moz-device-pixel-ratio: 2), only screen and (-o-min-device-pixel-ratio: 2 / 1) {
    .cabecalho:after {
        -webkit-background-size: 5px 5px;
        background-size: 5px 5px;
    }
}
header[role="banner"] {
    position: relative;
    top: 0;
    right: 0;
    left: 0;
    z-index: 1030;
    min-height: 50px;
    margin-bottom: 18px;
    border: 1px solid transparent;
    border-width: 0 0 1px;
}
@media (min-width: 768px) {
    header[role="banner"] {
        border-radius: 4px;
    }
}
header[role="banner"] .navbar-collapse {
    max-height: 340px;
}
@media (max-device-width: 480px) and (orientation: landscape) {
    header[role="banner"] .navbar-collapse {
        max-height: 200px;
    }
}
@media (min-width: 768px) {
    header[role="banner"] {
        border-radius: 0;
    }
}

