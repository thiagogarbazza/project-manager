fieldset {
    margin: 15px 0;
    padding: 10px;
    border: 1px solid #E5E5E5;
    border-top-width: 5px;
    -moz-border-radius: 10px;
    -khtml-border-radius: 10px;
    -webkit-border-radius: 10px;
    border-radius: 10px;
    -webkit-box-shadow: 0 01px 0 0 #E5E5E5;
    -moz-box-shadow: 0 01px 0 0 #E5E5E5;
    -khtml-box-shadow: 0 01px 0 0 #E5E5E5;
    box-shadow: 0 01px 0 0 #E5E5E5;
}

fieldset legend {
    font-weight: bold;
    font-size: 120%;
    cursor: default;
    width: auto;
    padding: 2px 15px;

    border-color: #E5E5E5;
    border-style: solid solid none;
    border-width: 4px 3px 0;
    border-radius: 10px;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
}

fieldset fieldset {
    border-top: 1px solid #555;
}

fieldset fieldset legend {
    font-size: 80%;
    text-transform: none;
}

