input[type=checkbox].checkbox-slider
  width 55px
  height 25px
  left 0
  &.slider-icon
    & ~ .text
      &:after
        font-family FontAwesome
        font-size 14px
        line-height 20px
        content "\f00d"
        border-width 1px
        padding-left 4px
        border-color #ffffff
    &:checked
      & ~ .text
        &:after
          font-family FontAwesome
          font-size 15px
          line-height 21px
          content "\f00c"
          border-width 1px
          padding-left 3px
          background-color #ffffff
          color #444444
  &.toggle
    & ~ .text
      &:after
        border 0
        background-color #444444
        width 14px
        height 14px
        top 3px
        left 3px
        box-shadow none
    &:checked
      & ~ .text
        &:after
          background-color #ffffff
          color #444444
  & ~ .text
    margin 0 4px
    min-height 24px
    &:before
      font-family $font-family-main
      content "ON\a0\a0\a0\a0\a0\a0\a0\a0\a0\a0\a0OFF"
      background-color #ffffff
      color #999999
      font-weight 300
      font-size 10px
      line-height 18px
      height 20px
      overflow hidden
      border-radius 50rem
      border 1px solid #cccccc
      text-align left
      float left
      padding 0
      width 52px
      text-indent -21px
      margin-right 0
      transition all 0.3s ease 0s
    &:after
      font-family $font-family-main
      content ''
      font-size 10px
      font-weight 300
      background-color #ffffff
      border 5px solid #444444
      border-radius 100%
      width 22px
      height 22px
      line-height 20px
      position absolute
      top -2px
      left -3px
      padding 0
      box-shadow 0 1px 1px 1px rgba(0, 0, 0, 0.3)
      transition all 0.3s ease
  &.yesno
    & ~ .text
      &:before
        content "YES\a0\a0\a0\a0\a0\a0\a0\a0\a0\a0\a0\a0NO"
  &.simnao
    & ~ .text
      &:before
        content "Sim\a0\a0\a0\a0\a0\a0\a0\a0\a0\a0\a0\a0NÃ£o"
  &:checked
    & ~ .text
      &:before
        text-indent 5px
        background-color #444444
        border-color #444444
        color #ffffff
      &:after
        left 34px
        background-color #444444
        border 5px solid #ffffff

  for cor-name, cor in $colors
    &.colored-{cor-name}
      & ~ .text
        &:before
          color: cor.color
          background-color: cor.background
          border-color: cor.border
        &:after
          color: cor.color
          background-color: cor.background
          border-color: cor.border
      &:checked
        & ~ .text
          &:before
            color: cor.color
            background-color: cor.background
            border-color: cor.border
          &:after
            color: cor.color
            background-color: cor.background
            border-color: cor.border
      &.slider-icon
        & ~ .text
          &:after
            color: cor.color
            background-color: cor.background
            border-color: cor.border
        &:checked
          & ~ .text
            &:after
            color: cor.color
            background-color: cor.background
            border-color: cor.border
      &.toggle
        & ~ .text
          &:after
            color: cor.color
            background-color: cor.background
            border-color: cor.border
        &:checked
          & ~ .text
            &:after
            color: cor.color
            background-color: cor.background
            border-color: cor.border
  