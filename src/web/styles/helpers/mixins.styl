vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -ms-{prop} args
  -o-{prop} args
  {prop} args

background-clip()
  vendor('background-clip', arguments)

border-radius()
  vendor('border-radius', arguments)

box-shadow()
  vendor('box-shadow', arguments)

opacity()
  filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=' + round(arguments * 100) + ')')
  vendor('opacity', arguments)

text-shadow()
  vendor('text-shadow', arguments)

transition()
  vendor('transition', arguments)

word-wrap()
  vendor('word-wrap', arguments)