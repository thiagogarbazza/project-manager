for space-name, space in $spaces
  .m-{space-name}
    margin: unit(space, 'px') !important
  .mt-{space-name}
    margin-top: unit(space, 'px') !important
  .mr-{space-name} 
    margin-right: unit(space, 'px') !important
  .mb-{space-name} 
    margin-bottom: unit(space, 'px') !important
  .ml-{space-name}
    margin-left: unit(space, 'px') !important
  .mx-{space-name}
    margin-right: unit(space, 'px') !important
    margin-left: unit(space, 'px') !important
  .my-{space-name}
    margin-top: unit(space, 'px') !important
    margin-bottom: unit(space, 'px') !important

.mx-auto 
  margin-right: auto !important
  margin-left: auto !important

for media-name, media in $medias
  @media (min-width: unit(media.width, 'px'))
    for space-name, space in media['spaces']
      .m-{media-name}-{space-name}
        margin: unit(space, 'px') !important
      .mt-{media-name}-{space-name}
        margin-top: unit(space, 'px') !important
      .mr-{media-name}-{space-name} 
        margin-right: unit(space, 'px') !important
      .mb-{media-name}-{space-name} 
        margin-bottom: unit(space, 'px') !important
