$spaces = {
  '0': 0
  '1': 4
  '2': 8
  '3': 16
  '4': 24
  '5': 32
  '6': 40  
}

$medias = {
  'sm': {
    width: 544
    spaces: {
      '0': 0
      '1': 4
      '2': 8
      '3': 16
      '4': 24
      '5': 32
      '6': 40  
    }
  }

  'md': {
    width: 768
    spaces: {
      '0': 0
      '1': 4
      '2': 8
      '3': 16
      '4': 24
      '5': 32
      '6': 40  
    }
  }

  'lg': {
    width: 1012
    spaces: {
      '0': 0
      '1': 4
      '2': 8
      '3': 16
      '4': 24
      '5': 32
      '6': 40  
    }
  }

  'xl': {
    width: 1280
    spaces: {
      '0': 0
      '1': 4
      '2': 8
      '3': 16
      '4': 24
      '5': 32
      '6': 40  
    }
  }
