.navbar 
  position: relative
  padding: 0
  margin: 0
  border: none
  height: $navbar-lenght
  min-height: $navbar-lenght
  line-height: $navbar-lenght - 3px
  z-index: 200
  background: $theme.primary.color 
  border-top: 3px solid $theme.secondary.color

  .navbar-item
    padding: 0
    margin: 0
    border: none

  .product-info
    padding: 0 0 0 20px
    width: 236px
 